<html>
{{>header}}
<body>
    {{>navMenu}}
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <h1>Inscribir Estudiante:</h1>
            </div>
        </div>
        
    </div>
    <div class="container">
        <form action="./ResultInscribirEstudiante">
            <div class="form-group">
                <label for="">Nombre:</label>
                <input type="text" class="form-control" name="nombre">
            </div>
            <div class="form-group">
                <label for="">Apellido:</label>
                <input type="text" class="form-control" name="apellido">
            </div>
            <div class="form-group">
                <label for="">tipo de indentificacio:</label>
                <select name="tipoIdentificacion" class="form-control" >
                    <option value="" selected></option>
                    <option value="cedula de ciudadania">cedula de ciudadania</option>
                    <option value="Documento Extrajeria">Documento extrajeria</option>
                    <option value="Tarjeta de Identidad" >Tarjeta de Identidad</option>
                </select>
            </div>
            <div class="form-group">
                <label for="">Numero identificacion:</label>
                <input type="text" class="form-control" name="nIdentificacion">
            </div>
            <div class="form-group">
                <label for="">Correo electronico</label>
                <input type="email" class="form-control" name="nIdentificacion">
            </div>
            <div class="form-group">
                <label for="listaCursos">Seleccione el curso:</label>
                <select name="cursoselect" class="form-control" id="cursoselect">
                   {{#each listaCursos}}
                   <option value={{code}}>{{nombre}}</option>
                   {{/each}}
                </select>
            </div>
            <button type="button submit" class="btn btn-primary">Inscribir</button>
        </form>
    </div>
    {{>footer}}
    {{>toolsjs}}
</body>
</html>